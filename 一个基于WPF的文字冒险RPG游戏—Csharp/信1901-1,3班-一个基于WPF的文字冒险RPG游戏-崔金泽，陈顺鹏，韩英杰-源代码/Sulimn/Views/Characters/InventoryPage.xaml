                                       Margin="5" />
                            <TextBlock x:Name="LblSelectedFoodEffects" Grid.Row="1" Width="400"
                                       Text="{Binding EffectsToString}" Margin="5" />
                            <TextBlock x:Name="LblSelectedFoodValue" Grid.Row="2"
                                       Text="{Binding ValueToStringWithText}" Margin="5" />
                            <TextBlock x:Name="LblSelectedFoodSellable" Grid.Row="3"
                                       Text="{Binding CanSellToString}" Margin="5" />
                            <TextBlock x:Name="LblSelectedFoodDescription" Grid.Row="4"
                                       Text="{Binding Description}" TextWrapping="Wrap" Margin="5" />
                            <StackPanel Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Bottom"
