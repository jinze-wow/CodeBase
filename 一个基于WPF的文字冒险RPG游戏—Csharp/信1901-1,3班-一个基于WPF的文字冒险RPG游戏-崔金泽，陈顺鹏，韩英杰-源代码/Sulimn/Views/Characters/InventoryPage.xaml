                                <Button x:Name="BtnEquipSelectedWeapon" Width="200" Content="_装备" Click="BtnEquipSelectedWeapon_Click" IsEnabled="False" Margin="5" />
                                <Button x:Name="BtnDropSelectedWeapon" Width="200" Content="_丢弃" Click="BtnDropSelectedWeapon_Click" IsEnabled="False" Margin="5" />
                            </StackPanel>
