                                <Button x:Name="BtnDropSelectedFood" Width="200" Content="_丢弃" Click="BtnDropSelectedFood_Click" IsEnabled="False" Margin="5" />
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
