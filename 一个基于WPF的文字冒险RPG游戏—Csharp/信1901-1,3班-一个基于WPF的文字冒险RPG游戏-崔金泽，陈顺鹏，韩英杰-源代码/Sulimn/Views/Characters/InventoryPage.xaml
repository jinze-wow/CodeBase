                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="430"
                              Height="450" Header="装备武器" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="LblEquippedWeapon" Grid.Row="0" Width="400" Margin="5"
                                       Text="{Binding Name}" />
                            <TextBlock x:Name="LblEquippedWeaponDamage" Grid.Row="1" Margin="5"
                                       Text="{Binding DamageToStringWithText}" />
                            <TextBlock x:Name="LblEquippedWeaponValue" Grid.Row="2"
                                       Text="{Binding ValueToStringWithText}" Margin="5" />
                            <TextBlock x:Name="LblEquippedWeaponType" Grid.Row="3" Text="{Binding WeaponType}"
                                       Margin="5" />
                            <TextBlock x:Name="LblEquippedWeaponSellable" Grid.Row="4"
                                       Text="{Binding CanSellToString}" Margin="5" />
                            <TextBlock x:Name="LblEquippedWeaponDescription" Grid.Row="5"
                                       Text="{Binding Description}" TextWrapping="Wrap" Margin="5" />
                            <Button x:Name="BtnUnequipWeapon" Grid.Row="6" Width="200" Content="_取消装备" VerticalAlignment="Bottom" Click="BtnUnequipWeapon_Click" IsEnabled="False" Margin="5" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Grid.Row="0" Margin="5" Header="库存">
                        <ListBox x:Name="LstWeaponInventory" Width="400" Height="400" ItemsSource="{Binding}"
                                 SelectionChanged="LstWeaponInventory_SelectionChanged"
                                 ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="5" />
                    </GroupBox>
                    <GroupBox Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="430"
                              Height="450" Header="选择装备" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="LblSelectedWeapon" Grid.Row="0" Width="400" Margin="5"
                                       Text="{Binding Name}" />
                            <TextBlock x:Name="LblSelectedWeaponDamage" Grid.Row="1" Margin="5" Width="400"
                                       Text="{Binding DamageToStringWithText}" />
                            <TextBlock x:Name="LblSelectedWeaponValue" Grid.Row="2"
                                       Text="{Binding ValueToStringWithText}" Margin="5" />
                            <TextBlock x:Name="LblSelectedWeaponType" Grid.Row="3" Text="{Binding WeaponTypeToString}"
                                       Margin="5" />
                            <TextBlock x:Name="LblSelectedWeaponSellable" Grid.Row="4"
                                       Text="{Binding CanSellToString}" Margin="5" />
                            <TextBlock x:Name="LblSelectedWeaponDescription" Grid.Row="5"
                                       Text="{Binding Description}" TextWrapping="Wrap" Margin="5" />
