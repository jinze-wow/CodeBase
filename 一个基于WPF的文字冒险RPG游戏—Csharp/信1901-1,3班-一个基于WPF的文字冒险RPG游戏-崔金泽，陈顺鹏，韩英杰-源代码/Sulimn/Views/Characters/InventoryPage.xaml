                                <Button x:Name="BtnDropSelectedRing" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Width="200"  Content="_丢弃" Click="BtnDropSelectedRing_Click" IsEnabled="False" Margin="5" />
